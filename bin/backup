#!/bin/sh -e
#
# Script to run this backup
#

. $(dirname $0)/common

avoid_running_backup

list_storage_names | ( \
    while read NAME
    do
	printf "\n#\n# Backing up to ${NAME}\n#\n\n"
	duplicacy_cmd \
	    -v \
	    backup \
	    $(dry_run_arg) \
	    -stats \
	    -storage "${NAME}" \
	    $(limit_rate) \
	    "$@" \
	    || true
    done
    )

exit 0
