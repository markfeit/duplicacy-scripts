#!/bin/sh
#
# Prune snapshots according to a list
#

. $(dirname $0)/common

avoid_running_backup

PRUNES="${ETC}/prune"

if [ ! -f "${PRUNES}" -o ! -r "${PRUNES}" ]
then
    echo "No prune configuration found."
    exit 0
fi

PRUNESPEC=$( \
    cat "${PRUNES}" \
	| sed -e 's/\s*#.*$//g; /^\s*$/d' \
	| awk '$0 ~ /^[0-9]+\s*[0-9]+$/ { print $1 ":" $2 }' \
	| sort -r -n -t: -k 2 \
	| sed -e 's/^/-keep /g' \
	 )

list_storage_names | (
    while read STORAGE
    do
	printf "\n#\n# Pruning storage ${STORAGE}\n#\n\n"

	list_snapshot_names "${STORAGE}" | (
	    while read SNAPSHOT
	    do
		printf "\n# Pruning ${STORAGE} snapshot ${SNAPSHOT}\n\n"
		duplicacy_cmd -v prune $(dry_run_arg) \
		     -storage "${STORAGE}" \
		     -id "${SNAPSHOT}" \
		     ${PRUNESPEC} \
		     "$@"
	    done
	)
    done
    )


exit 0
