#!/bin/sh
#
# Do a self-update
#

. $(dirname $0)/common

# If not doing updates, exit quietly.
[ -n "${CONFIG_AUTO_UPDATE}" ] \
    || exit 0

# Before doing an update, make and execute a copy of this script so
# any updates don't self-clobber.
if [ "$1" != "--copied" ]
then
    NEW_RUN="${WHEREAMI}/${WHOAMI}.copy"
    rm -f "${NEW_RUN}"
    cp "$0" "${NEW_RUN}"
    exec "${NEW_RUN}" --copied
fi
   
UPDATE_DIR="${VAR}/update"

mkdir -p "${UPDATE_DIR}"
     
[ -d "${UPDATE_DIR}/.git" ] \
    || die "Unable to find sources in ${UPDATE_DIR}"

if [ -n "${CONFIG_AUTO_UPDATE_BRANCH}" ]
then
    GIT_BRANCH="GIT_BRANCH=origin/${CONFIG_AUTO_UPDATE_BRANCH}"
fi

log update make \
    -C "${UPDATE_DIR}" \
    DEST="${TOP}" \
    ROOT="${TOP}/root" \
    "${GIT_BRANCH}" \
    update

# Get rid of the temporary script
[ "$1" = "--copied" ] && exec rm -f "$0"

exit 0
